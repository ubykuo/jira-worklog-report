{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="col-xs-12 col-sm-6 push-sm-3">
        <br>
        <div class="panel panel-default">
            <div class="panel-body">
                {% for label, flashes in app.session.flashbag.all %}
                    {% for flash in flashes %}
                        <div class="alert alert-{{ label }} alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span
                                        aria-hidden="true">&times;</span></button>
                            {{ flash }}
                        </div>
                    {% endfor %}
                {% endfor %}
                <!--<div class="alert alert-danger">
                    <b>Limitations:</b> 1000 issues per query. 20 worklogs per issue. <br>
                    An advice it be showed if any of this values are exceedeed.
                </div>-->

                {{ form_start(form) }}
                {{ form_errors(form) }}
                <fieldset>
                    <legend>JIRA Server</legend>
                    <div class="form-group row">
                        <label for="url-input" class="col-2 col-form-label">URL</label>
                        <div class="col-10">
                            {{ form_widget(form.baseURL) }}
                            <small class="form-text text-muted">
                                Paste any link of the JIRA Server, Issue or Board
                            </small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="username-input" class="col-2 col-form-label">Username</label>
                        <div class="col-10">
                            {{ form_widget(form.username) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="passwd-input" class="col-2 col-form-label">Password</label>
                        <div class="col-10">
                            {{ form_widget(form.passwd) }}
                        </div>
                    </div>
                </fieldset>
                <br>
                <button type="submit" class="btn btn-primary btn-block btn-lg">Check credentials</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
